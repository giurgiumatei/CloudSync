{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "Confluent.Kafka": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Kafka": {
    "BootstrapServers": "kafka:9092",
    "Consumer": {
      "GroupId": "azure-sync-group",
      "ClientId": "cloudsync-azure-consumer",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": false,
      "MaxPollIntervalMs": 300000,
      "SessionTimeoutMs": 10000,
      "HeartbeatIntervalMs": 3000,
      "FetchMinBytes": 1024,
      "FetchMaxWaitMs": 100,
      "MaxPartitionFetchBytes": 1048576,
      "CheckCrcs": true,
      "EnablePartitionEof": false,
      "AllowAutoCreateTopics": true,
      "IsolationLevel": "ReadCommitted",
      "MaxPollRecords": 100
    },
    "Topics": {
      "DataTopic": "data-topic",
      "DeadLetterQueue": "data-topic-dlq"
    },
    "TopicName": "data-topic"
  },
  "AzureEndpoint": {
    "BaseUrl": "https://azure-api.example.com",
    "ApiKey": "your-azure-api-key",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "RetryDelayMs": 1000
  },
  "ErrorHandling": {
    "TransientErrors": {
      "MaxRetries": 3,
      "InitialDelayMs": 1000,
      "MaxDelayMs": 30000,
      "BackoffMultiplier": 2.0,
      "Jitter": 0.1,
      "CircuitBreakerThreshold": 5,
      "CircuitBreakerTimeoutMs": 60000,
      "EnableCircuitBreaker": true
    },
    "PermanentErrors": {
      "MaxRetries": 0
    },
    "EnableDetailedErrorLogging": true,
    "SendToDlqOnPermanentError": true,
    "SendToDlqOnMaxRetries": true,
    "RetryConfiguration": {
      "InitialDelayMs": 1000,
      "MaxDelayMs": 30000,
      "BackoffMultiplier": 2.0,
      "MaxRetryAttempts": 5,
      "JitterPercentage": 10
    },
    "CircuitBreaker": {
      "FailureThreshold": 5,
      "TimeoutMs": 60000
    }
  },
  "Idempotency": {
    "CacheRetentionMinutes": 60,
    "MaxCacheSize": 100000,
    "CleanupIntervalMinutes": 5,
    "DefaultLockTimeoutMs": 30000,
    "EnablePersistentStorage": false,
    "EnableDetailedLogging": true,
    "EnableStatistics": true
  }
} 